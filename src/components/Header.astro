<script>
    import gsap from 'gsap';

    document.addEventListener('DOMContentLoaded', () => {
        const logoLink = document.querySelector('.logo-link');
        const letters = document.querySelectorAll('.letter');
        const navLinks = document.querySelectorAll('nav a');
        const menuToggle = document.getElementById('menu-toggle');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileMenuItems = document.querySelectorAll(
            '.mobile-menu-item a'
        );
        const hamburgerLines = document.querySelectorAll('.line');
        const mobileContactButton = document.getElementById(
            'mobileContactButton'
        );

        let menuOpen = false;

        // Establecer estado inicial
        gsap.set(navLinks, { autoAlpha: 0, y: 0 });
        gsap.set(letters, { opacity: 0, scale: 0 });

        // Función para ejecutar las animaciones del Header
        const executeHeaderAnimations = () => {
            // Animación de entrada del header
            const headerTl = gsap.timeline({ delay: 0.5 });

            headerTl
                .to(letters, {
                    opacity: 1,
                    scale: 1,
                    stagger: 0.03,
                    duration: 0.4,
                    ease: 'back.out(1.7)'
                })
                .to(
                    navLinks,
                    {
                        autoAlpha: 1,
                        y: 0,
                        stagger: 0.1,
                        duration: 0.6,
                        ease: 'power2.out'
                    },
                    '-=0.2'
                );
        };

        // Esperar al evento loadingComplete para ejecutar las animaciones
        document.addEventListener('loadingComplete', () => {
            executeHeaderAnimations();
        });

        // Fallback: si no hay LoadingScreen, ejecutar las animaciones después de un delay
        const loadingScreen = document.getElementById('loading-screen');
        if (!loadingScreen) {
            setTimeout(executeHeaderAnimations, 500);
        }

        // Animación de hover para el logo (mantenemos la original)
        if (logoLink && letters.length) {
            let logoHoverAnimation: gsap.core.Timeline | null = null;

            // Función para obtener el color correcto según el tema
            const getCurrentThemeColor = () => {
                const isDark =
                    document.documentElement.classList.contains('dark');
                return isDark ? '#ffffff' : '#000000';
            };

            logoLink.addEventListener('mouseenter', () => {
                gsap.killTweensOf(letters);

                logoHoverAnimation = gsap.timeline({ repeat: -1, yoyo: false });

                letters.forEach((letter, index) => {
                    if (logoHoverAnimation) {
                        logoHoverAnimation
                            .to(
                                letter,
                                {
                                    y: -12,
                                    rotation: gsap.utils.random(-15, 15),
                                    color:
                                        index % 2 === 0
                                            ? '#84cc16'
                                            : getCurrentThemeColor(),
                                    scale: 1.2,
                                    duration: 0.4,
                                    ease: 'power2.out',
                                    delay: 0
                                },
                                index * 0.06
                            )
                            .to(
                                letter,
                                {
                                    y: 0,
                                    rotation: 0,
                                    color:
                                        index === letters.length - 1
                                            ? '#84cc16'
                                            : getCurrentThemeColor(),
                                    scale: 1,
                                    duration: 0.5,
                                    ease: 'elastic.out(1.2, 0.5)'
                                },
                                `>-0.2`
                            );
                    }
                });
            });

            logoLink.addEventListener('mouseleave', () => {
                if (logoHoverAnimation) {
                    logoHoverAnimation.kill();
                    logoHoverAnimation = null;

                    gsap.to(letters, {
                        y: 0,
                        rotation: 0,
                        scale: 1,
                        color: function (i) {
                            return i === letters.length - 1
                                ? '#84cc16'
                                : getCurrentThemeColor();
                        },
                        duration: 0.4,
                        ease: 'power2.out',
                        stagger: 0.02
                    });
                }
            });
        }

        // Manejo del menú móvil
        if (menuToggle && mobileMenu && hamburgerLines) {
            // Configurar estado inicial del menú móvil
            gsap.set(mobileMenuItems, { y: 30, opacity: 0 });

            menuToggle.addEventListener('click', () => {
                menuOpen = !menuOpen;

                if (menuOpen) {
                    // Bloquear scroll del body con clase CSS
                    document.body.classList.add('menu-open');

                    // Animar hamburguesa a X con translate para centrar perfectamente
                    gsap.to('.line1', {
                        rotation: 45,
                        y: 6,
                        x: 0,
                        duration: 0.3
                    });
                    gsap.to('.line2', { opacity: 0, duration: 0.3 });
                    gsap.to('.line3', {
                        rotation: -45,
                        y: -6,
                        x: 0,
                        duration: 0.3
                    });

                    // Mostrar menú
                    gsap.to(mobileMenu, {
                        x: '0%',
                        duration: 0.4,
                        ease: 'power2.out',
                        onComplete: () => {
                            gsap.to(mobileMenuItems, {
                                y: 0,
                                opacity: 1,
                                stagger: 0.08,
                                duration: 0.5,
                                ease: 'power2.out'
                            });
                        }
                    });
                } else {
                    // Restaurar scroll del body removiendo clase CSS
                    document.body.classList.remove('menu-open');

                    // Revertir hamburguesa con reset completo
                    gsap.to('.line1', {
                        rotation: 0,
                        y: 0,
                        x: 0,
                        duration: 0.3
                    });
                    gsap.to('.line2', { opacity: 1, duration: 0.3 });
                    gsap.to('.line3', {
                        rotation: 0,
                        y: 0,
                        x: 0,
                        duration: 0.3
                    });

                    // Ocultar elementos del menú
                    gsap.to(mobileMenuItems, {
                        y: 30,
                        opacity: 0,
                        stagger: 0.04,
                        duration: 0.3,
                        ease: 'power2.in',
                        onComplete: () => {
                            gsap.to(mobileMenu, {
                                x: '-100%',
                                duration: 0.3,
                                ease: 'power2.in'
                            });
                        }
                    });
                }
            });

            // Cerrar menú al hacer clic en un enlace
            mobileMenuItems.forEach((item) => {
                item.addEventListener('click', () => {
                    if (menuOpen) {
                        // Restaurar scroll del body inmediatamente con clase CSS
                        document.body.classList.remove('menu-open');
                        menuToggle.click();
                    }
                });
            });

            if (mobileContactButton) {
                mobileContactButton.addEventListener('click', () => {
                    if (menuOpen) {
                        // Restaurar scroll del body inmediatamente con clase CSS
                        document.body.classList.remove('menu-open');
                    }
                    menuToggle.click();
                });
            }
        }
    });
</script>

