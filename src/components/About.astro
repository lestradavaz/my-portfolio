<script>
    import gsap from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener('DOMContentLoaded', () => {
        // Elementos de la sección About con selectores correctos
        const sectionLabel = document.querySelector(
            '.about .section-label span'
        );
        const headingLines = document.querySelectorAll(
            '.about .heading-line span'
        );
        const aboutDescription = document.querySelector('.about-description');
        const valueItems = document.querySelectorAll('.value-item');
        const skillsSection = document.querySelector('.skills-section');

        // Configurar estado inicial
        gsap.set([sectionLabel, aboutDescription, skillsSection], {
            opacity: 0,
            y: 50
        });
        gsap.set(headingLines, { y: '100%' });
        gsap.set(valueItems, {
            opacity: 0,
            y: 30
        });

        // Timeline de entrada
        const aboutTl = gsap.timeline({
            scrollTrigger: {
                trigger: '.about-heading',
                start: 'top 70%',
                toggleActions: 'play none none none'
            }
        });

        aboutTl
            .to(sectionLabel, {
                opacity: 1,
                y: 0,
                duration: 0.6,
                ease: 'power2.out'
            })
            .to(
                headingLines,
                {
                    y: '0%',
                    duration: 1,
                    stagger: 0.1,
                    ease: 'power3.out'
                },
                '-=0.3'
            )
            .to(
                aboutDescription,
                {
                    opacity: 1,
                    y: 0,
                    duration: 0.6,
                    ease: 'power2.out'
                },
                '-=0.4'
            )
            .to(
                valueItems,
                {
                    opacity: 1,
                    y: 0,
                    duration: 0.5,
                    stagger: 0.1,
                    ease: 'power2.out'
                },
                '-=0.2'
            );

        // Animación de la sección de carrera
        const careerSection = document.querySelector('.career-section');
        const careerCards = document.querySelectorAll('.career-card');

        if (careerSection && careerCards.length > 0) {
            // Configurar estado inicial de la sección de carrera
            gsap.set(careerSection.querySelector('h3'), {
                opacity: 0,
                y: 30
            });
            gsap.set(careerCards, {
                opacity: 0,
                y: 50,
                scale: 0.9
            });

            // Timeline de la sección de carrera
            const careerTl = gsap.timeline({
                scrollTrigger: {
                    trigger: careerSection,
                    start: 'top 70%',
                    toggleActions: 'play none none none'
                }
            });

            careerTl
                .to(careerSection.querySelector('h3'), {
                    opacity: 1,
                    y: 0,
                    duration: 0.6,
                    ease: 'power2.out'
                })
                .to(careerCards, {
                    opacity: 1,
                    y: 0,
                    scale: 1,
                    duration: 0.8,
                    stagger: 0.15,
                    ease: 'back.out(1.7)'
                }, '-=0.3');
        }

        // Animación de la sección de skills
        gsap.to(skillsSection, {
            opacity: 1,
            y: 0,
            duration: 0.6,
            ease: 'power2.out',
            scrollTrigger: {
                trigger: skillsSection,
                start: 'top 80%',
                toggleActions: 'play none none none'
            }
        });
    });
</script>

