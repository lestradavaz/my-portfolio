---
import Container from './Container.astro';
import Button from './Button.astro';
---

<section
    id="contact"
    class="contact py-32 bg-white dark:bg-gray-900 relative overflow-hidden"
>
    <div
        class="absolute top-0 left-0 w-1/3 h-full bg-gradient-to-r from-lime-50 dark:from-lime-900/20 to-transparent opacity-50 pointer-events-none"
    >
    </div>

    <Container>
        <div class="text-center mb-20">
            <div class="section-label mb-8 overflow-hidden">
                <span
                    class="inline-block text-sm font-semibold text-lime-600 dark:text-lime-400 tracking-[0.2em] uppercase"
                >
                    Contacto
                </span>
            </div>
            <div class="contact-heading mb-8">
                <h2
                    class="text-5xl md:text-7xl lg:text-8xl font-light text-gray-900 dark:text-white leading-tight"
                >
                    <span class="block heading-line overflow-hidden">
                        <span class="inline-block">Trabajemos</span>
                    </span>
                    <span class="block heading-line overflow-hidden">
                        <span
                            class="inline-block text-lime-500 dark:text-lime-400"
                            >Juntos</span
                        >
                    </span>
                </h2>
            </div>
            <div class="contact-subtitle overflow-hidden">
                <p
                    class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto leading-relaxed"
                >
                    ¿Tienes una idea increíble? Estoy aquí para ayudarte a
                    convertirla en una experiencia digital extraordinaria que
                    impulse tu negocio hacia el éxito.
                </p>
            </div>
        </div>

        <div class="contact-content max-w-4xl mx-auto">
            <div class="contact-methods grid md:grid-cols-3 gap-8 mb-16">
                <div class="contact-method text-center group">
                    <div
                        class="method-icon w-16 h-16 bg-lime-100 dark:bg-lime-900/30 rounded-2xl flex items-center justify-center mx-auto mb-6"
                    >
                        <svg
                            class="w-8 h-8 text-lime-600 dark:text-lime-400"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                            ></path>
                        </svg>
                    </div>
                    <h3
                        class="text-xl font-semibold text-gray-900 dark:text-white mb-2"
                    >
                        Email Directo
                    </h3>
                    <p class="text-gray-600 dark:text-gray-400 mb-4">
                        Respuesta en menos de 24 horas
                    </p>
                    <a
                        href="mailto:contacto@lestradavaz.com"
                        class="text-lime-600 dark:text-lime-400 font-medium hover:text-lime-700 dark:hover:text-lime-300 transition-colors"
                    >
                        contacto@lestradavaz.com
                    </a>
                </div>

                <div class="contact-method text-center group">
                    <div
                        class="method-icon w-16 h-16 bg-blue-100 dark:bg-blue-900/30 rounded-2xl flex items-center justify-center mx-auto mb-6"
                    >
                        <svg
                            class="w-8 h-8 text-blue-600 dark:text-blue-400"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                            ></path>
                        </svg>
                    </div>
                    <h3
                        class="text-xl font-semibold text-gray-900 dark:text-white mb-2"
                    >
                        WhatsApp
                    </h3>
                    <p class="text-gray-600 dark:text-gray-400 mb-4">
                        Conversación inmediata
                    </p>
                    <a
                        href="https://wa.me/9982056683"
                        target="_blank"
                        class="text-blue-600 dark:text-blue-400 font-medium hover:text-blue-700 dark:hover:text-blue-300 transition-colors"
                    >
                        +52 998 205 6683
                    </a>
                </div>

                <div class="contact-method text-center group">
                    <div
                        class="method-icon w-16 h-16 bg-purple-100 dark:bg-purple-900/30 rounded-2xl flex items-center justify-center mx-auto mb-6"
                    >
                        <svg
                            class="w-8 h-8 text-purple-600 dark:text-purple-400"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                            ></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                    </div>
                    <h3
                        class="text-xl font-semibold text-gray-900 dark:text-white mb-2"
                    >
                        Ubicación
                    </h3>
                    <p class="text-gray-600 dark:text-gray-400 mb-4">
                        Disponible para reuniones
                    </p>
                    <span
                        class="text-purple-600 dark:text-purple-400 font-medium"
                    >
                        Cancún, México
                    </span>
                </div>
            </div>

            <div class="social-section text-center">
                <h3
                    class="text-2xl font-semibold text-gray-900 dark:text-white mb-6"
                >
                    También puedes encontrarme en:
                </h3>
                <div class="social-links flex justify-center space-x-6">
                    <a
                        href="https://linkedin.com/in/lestradavaz"
                        target="_blank"
                        class="social-link group flex items-center bg-blue-50 dark:bg-blue-900/20 hover:bg-blue-100 dark:hover:bg-blue-900/30 px-6 py-4 rounded-xl transition-all duration-300"
                    >
                        <div
                            class="social-icon w-10 h-10 bg-blue-100 dark:bg-blue-800/50 group-hover:bg-blue-200 dark:group-hover:bg-blue-700/50 rounded-lg flex items-center justify-center transition-colors"
                        >
                            <svg
                                class="w-5 h-5 text-blue-600 dark:text-blue-400"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                                ></path>
                            </svg>
                        </div>
                        <span
                            class="text-blue-600 dark:text-blue-400 font-medium hidden sm:block ml-3"
                            >LinkedIn</span
                        >
                    </a>

                    <a
                        href="https://instagram.com/lestradavaz"
                        target="_blank"
                        class="social-link group flex items-center bg-pink-50 dark:bg-pink-900/20 hover:bg-pink-100 dark:hover:bg-pink-900/30 px-6 py-4 rounded-xl transition-all duration-300"
                    >
                        <div
                            class="social-icon w-10 h-10 bg-pink-100 dark:bg-pink-800/50 group-hover:bg-pink-200 dark:group-hover:bg-pink-700/50 rounded-lg flex items-center justify-center transition-colors"
                        >
                            <svg
                                class="w-5 h-5 text-pink-600 dark:text-pink-400"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                                ></path>
                            </svg>
                        </div>
                        <span
                            class="text-pink-600 dark:text-pink-400 font-medium hidden sm:block ml-3"
                            >Instagram</span
                        >
                    </a>
                </div>
            </div>

            <div class="cta-section mt-16 text-center">
                <div
                    class="bg-gradient-to-r from-lime-50 dark:from-lime-900/20 to-green-50 dark:to-green-900/20 rounded-3xl p-12"
                >
                    <h3
                        class="text-3xl font-light text-gray-900 dark:text-white mb-4"
                    >
                        ¿Listo para comenzar?
                    </h3>
                    <p
                        class="text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto"
                    >
                        No esperes más para llevar tu presencia digital al
                        siguiente nivel. Conversemos sobre tu proyecto y
                        descubramos juntos las posibilidades.
                    </p>
                    <a
                        href="mailto:contacto@lestradavaz.com"
                        class="inline-flex items-center px-8 py-4 bg-lime-500 dark:bg-lime-600 text-white font-semibold rounded-full hover:bg-lime-600 dark:hover:bg-lime-700 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
                    >
                        Enviar Email
                        <svg
                            class="ml-2 w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </Container>
</section>

<script>
    import gsap from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener('DOMContentLoaded', () => {
        // Elementos de la sección Contact con selectores correctos
        const sectionLabel = document.querySelector(
            '.contact .section-label span'
        );
        const headingLines = document.querySelectorAll(
            '.contact .heading-line span'
        );
        const subtitle = document.querySelector('.contact-subtitle p');
        const contactMethods = document.querySelectorAll('.contact-method');
        const socialLinks = document.querySelectorAll('.social-link');
        const ctaSection = document.querySelector('.cta-section');

        // Configurar estado inicial
        gsap.set([sectionLabel, subtitle, ctaSection], {
            opacity: 0,
            y: 50
        });
        gsap.set(headingLines, { y: '100%' });
        gsap.set(contactMethods, {
            opacity: 0,
            y: 30
        });
        gsap.set(socialLinks, {
            opacity: 0,
            scale: 0.8
        });

        // Timeline de entrada
        const contactTl = gsap.timeline({
            scrollTrigger: {
                trigger: '.contact-heading',
                start: 'top 70%',
                toggleActions: 'play none none none'
            }
        });

        contactTl
            .to(sectionLabel, {
                opacity: 1,
                y: 0,
                duration: 0.6,
                ease: 'power2.out'
            })
            .to(
                headingLines,
                {
                    y: '0%',
                    duration: 1,
                    stagger: 0.1,
                    ease: 'power3.out'
                },
                '-=0.3'
            )
            .to(
                subtitle,
                { opacity: 1, y: 0, duration: 0.6, ease: 'power2.out' },
                '-=0.4'
            );

        // Animación de los contact methods
        gsap.to(contactMethods, {
            opacity: 1,
            y: 0,
            duration: 0.6,
            stagger: 0.1,
            ease: 'power2.out',
            scrollTrigger: {
                trigger: '.contact-methods',
                start: 'top 80%',
                toggleActions: 'play none none none'
            }
        });

        // Animación de los social links
        gsap.to(socialLinks, {
            opacity: 1,
            scale: 1,
            duration: 0.5,
            stagger: 0.1,
            ease: 'back.out(1.7)',
            scrollTrigger: {
                trigger: '.social-section',
                start: 'top 80%',
                toggleActions: 'play none none none'
            }
        });

        // Animación del CTA
        gsap.to(ctaSection, {
            opacity: 1,
            y: 0,
            duration: 0.6,
            ease: 'power2.out',
            scrollTrigger: {
                trigger: ctaSection,
                start: 'top 80%',
                toggleActions: 'play none none none'
            }
        });
    });
</script>

<style>
    .social-icon {
        transition: all 0.3s ease;
    }

    .social-icon:hover {
        transform: translateY(-2px);
    }

    .form input,
    .form select,
    .form textarea {
        transition: all 0.3s ease;
    }

    .form input:focus,
    .form select:focus,
    .form textarea:focus {
        transform: translateY(-1px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    .form button:active {
        transform: translateY(1px);
    }

    .heading-line {
        overflow: hidden;
        display: block;
    }

    .contact-method {
        backdrop-filter: blur(10px);
    }

    .social-link {
        backdrop-filter: blur(10px);
    }
</style>
