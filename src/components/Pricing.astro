<script>
    import gsap from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener('DOMContentLoaded', () => {
        // Elementos de la sección Pricing con selectores correctos
        const sectionLabel = document.querySelector(
            '.pricing .section-label span'
        );
        const headingLines = document.querySelectorAll(
            '.pricing .heading-line span'
        );
        const subtitle = document.querySelector('.pricing-description p');
        const projectItems = document.querySelectorAll('.project-item');

        // Configurar estado inicial
        gsap.set([sectionLabel, subtitle], {
            opacity: 0,
            y: 50
        });
        gsap.set(headingLines, { y: '100%' });
        gsap.set(projectItems, {
            opacity: 0,
            y: 60
        });

        // Timeline de entrada del header
        const pricingTl = gsap.timeline({
            scrollTrigger: {
                trigger: '.pricing-heading',
                start: 'top 70%',
                toggleActions: 'play none none none'
            }
        });

        pricingTl
            .to(sectionLabel, {
                opacity: 1,
                y: 0,
                duration: 0.6,
                ease: 'power2.out'
            })
            .to(
                headingLines,
                {
                    y: '0%',
                    duration: 1,
                    stagger: 0.1,
                    ease: 'power3.out'
                },
                '-=0.3'
            )
            .to(
                subtitle,
                { opacity: 1, y: 0, duration: 0.6, ease: 'power2.out' },
                '-=0.4'
            );

        // Animación de los elementos del proyecto
        projectItems.forEach((item, index) => {
            gsap.to(item, {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: 'power2.out',
                scrollTrigger: {
                    trigger: item,
                    start: 'top 80%',
                    toggleActions: 'play none none none'
                }
            });
        });
    });
</script>

